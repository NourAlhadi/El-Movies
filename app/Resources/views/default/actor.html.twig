{% extends 'base.html.twig' %}


{% block body %}
    <div class="container-fluid">
        <div class="row blocks">
            <div class="col-xs-12">
                <strong>Movies Acted By {{ actor.name }} Are:</strong>
            </div>
            <div class="col-xs-12">
                {% set cnt = 0 %}
                {% for movie in movies %}
                    {% if actor in movie.actors %}
                        {% if cnt%4 == 0 %}
                            {% if cnt != 0 %}
                                </div>
                            {% endif %}
                        <div class="row">
                        {% endif %}
                        <a href="{{ path('movie',{id:movie.id}) }}">
                            <div class="col-xs-2 cat">
                                {% if movie.mainPoster == null %}
                                    <img src="{{ asset('assets/res/mainPoster.png') }}" alt="{{ movie.title }}">
                                {% else %}
                                    <img src="{{ asset('assets/res/'~movie.mainPoster) }}" alt="{{ movie.title }}">
                                {% endif %}
                                <strong class="text-center">{{ movie.title }}</strong>
                            </div>
                        </a>
                        {% set cnt = cnt + 1 %}
                    {% endif %}
                {% endfor %}
                {% if cnt == 0  %}
                    <div class="col-xs-12 alert alert-warning">
                        No Matching Movies!!
                    </div>
                {% else %}
                    {% if cnt % 4 != 0 %}
                        </div>
                    {% endif %}
                {% endif %}
        </div>
    </div>

</div>

{% endblock %}

{% block stylesheets %}
    <style>
        .cat{
            border-radius: 15px;
            box-shadow: 5px 5px 5px 5px #AAA;
            background-color: #DDD;
            margin: 20px 10px;
            text-align: center;
            padding: 0;
            color: #2f2f2f;
            font-weight: bold;
            height: 250px;
            width: 150px;
        }

        .cat > img{
            max-height: 100%;
            max-width: 100%;
            border-radius: 15px;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}
