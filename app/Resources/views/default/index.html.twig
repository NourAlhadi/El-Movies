{% extends 'base.html.twig' %}

{% block body %}


    <!-- Main Section -->

    <div class="container blocks">
        <h2> - Top Rated</h2>
        <div id="topRated" class="carousel slide" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="{{ asset('assets/res/atomic.jpg') }}" alt="Atomic Blonde">
                    <div class="carousel-caption">
                        <h2>Atomic Blonde</h2>
                        <p>With total rate of: 96.12%</p>
                    </div>
                </div>

                <div class="item">
                    <img src="{{ asset('assets/res/it.jpg') }}" alt="IT">
                    <div class="carousel-caption">
                        <h2>IT</h2>
                        <p>With total rate of: 90.61%</p>
                    </div>
                </div>

                <div class="item">
                    <img src="{{ asset('assets/res/johnwick.jpg') }}" alt="John Wick 2">
                    <div class="carousel-caption">
                        <h2>John Wick 2</h2>
                        <p>With total rate of: 99.99%</p>
                    </div>
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#topRated" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#topRated" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <!-- End of Top Rated -->

    <!-- New Movies -->
    <div class="container blocks">
        <h2> - New Movies</h2>
        <div id="newMovies" class="carousel slide" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="{{ asset('assets/res/johnwick.jpg') }}" alt="John Wick 2">
                    <div class="carousel-caption">
                        <h2>John Wick 2</h2>
                        <p>Release Year: 2017</p>
                    </div>
                </div>

                <div class="item">
                    <img src="{{ asset('assets/res/atomic.jpg') }}" alt="Atomic Blonde">
                    <div class="carousel-caption">
                        <h2>Atomic Blonde</h2>
                        <p>Release Year: 2017</p>
                    </div>
                </div>

                <div class="item">
                    <img src="{{ asset('assets/res/it.jpg') }}" alt="IT">
                    <div class="carousel-caption">
                        <h2>IT</h2>
                        <p>Release Year: 2017</p>
                    </div>
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#newMovies" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#newMovies" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <!-- End of new movies -->

    <!-- End of Main Section -->


{% endblock %}



{% block stylesheets %}
<style>
    .item{
        height: 400px;
    }

    .carousel-caption{
        font-weight: bolder;
        font-size:16px;
        background-color: rgba(50,50,50,.6);
        border-radius: 15px;
        box-shadow: 2px 2px 2px 2px rgba(40,40,40,0.5);
        bottom:0!important;
        left: 0!important;
        width: 100%;
        padding: 0;
    }

    .item img{
        display: block;
        position: absolute;
        top: 50%;
        left: 50%;
        min-height: 100%;
        min-width: 100%;
        transform: translate(-50%, -50%);
    }

    .slide{
        margin-bottom: 20px;
    }

    @media screen and (max-width: 632px) {
        .movies{
            height: 280px;
        }
        .item{
            height: 200px;
        }
        .carousel-caption{
            font-weight: bold;
            font-size:14px;
            bottom:0!important;
            left: 0!important;
            width: 100%;
            padding: 0;
        }
        .movies h2{
            font-size: 16px;
            font-weight: bold;
        }
    }
</style>
{% endblock %}

