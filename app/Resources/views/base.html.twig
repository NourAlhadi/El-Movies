<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}El Movies!!{% endblock %}</title>

        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/font-awesome.min.css') }}">
        {% block stylesheets %}{% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <!-- Navigation Bar Start -->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('index') }}">El Movies</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav navbar-right">
                        {% if is_granted('ROLE_USER') %}
                            <li>
                                <a href="{{ path('fos_user_profile_show') }}">
                                    <span class="glyphicon glyphicon-user"></span> Profile
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('fos_user_security_logout') }}">
                                    <span class="glyphicon glyphicon-log-out"></span> Logout
                                </a>
                            </li>
                        {% else %}
                            <li data-toggle="modal" data-target="#myModal">
                                <a href="{{ path('fos_user_security_login') }}">
                                    <span class="glyphicon glyphicon-log-in"></span> Login</a>
                            </li>
                            <li data-toggle="modal" data-target="#myModal">
                                <a href="{{ path('fos_user_registration_register') }}">
                                    <span class="glyphicon glyphicon-user"></span> Sign Up</a>
                            </li>
                        {% endif %}
                    </ul>
                    <form class="navbar-form" id="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for a movie, actor or category">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
        <!-- End of Navigation Bar -->

        {% block social %}
        <!-- Fixed Right Social Media -->

        <div class="container righter">
            <div class="row">
                <div class="col-xs-offset-11 col-xs-1">
                    <div class="col-xs-offset-11 col-xs-1">
                        <div class="fa fa-facebook"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-offset-11 col-xs-1">
                    <div class="col-xs-offset-11 col-xs-1">
                        <div class="fa fa-twitter"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-offset-11 col-xs-1">
                    <div class="col-xs-offset-11 col-xs-1">
                        <div class="fa fa-google"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- End of block -->
        {% endblock %}

        {% block fastaccess %}
        <!-- Fixed Left Fast Access -->

        <div class="container hidden-sm">
            <ul class="lefter">
                <li> - Top Rated <span class="fa fa-star checked"></span></li>
                <li> - New Movies<span class="fa fa-star checked"></span></li>
                <li> - Actors<span class="fa fa-star checked"></span></li>
                <li> - Categories<span class="fa fa-star checked"></span></li>
            </ul>
        </div>

        <!-- End of block -->
        {% endblock %}


        {% block body %}{% endblock %}

        <!-- Finally The Footer -->
        <footer class="container-fluid bg-foot text-center">
            <p>El Movies your best choice to watch movies everytime. <br>
                all right reserved &copy; El Movies 2017
            </p>
        </footer>
        <!-- End of footer -->

        <script type="text/javascript" src="{{ asset('assets/js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
        <script>
            $(document).ready(function () {
                $("footer").parent().css({position: 'relative'});
                $("footer").css({width:'100%' , position:'absolute'});
                var h =  $(window).height();
                var pos = $("footer").position();
                var ntop = h - 80;
                if (pos.top < h) $("footer").css({top:ntop});
            });
        </script>
    </body>
</html>
